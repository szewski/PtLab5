<Application x:Class="PtLab.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PtLab"
             xmlns:resource="clr-namespace:PtLab.Resource"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ObjectDataProvider x:Key="Strings"
            ObjectType="{x:Type resource:CultureResources}"
            MethodName="GetStringsInstance" />
        <Style x:Key="{x:Type RadioButton}" TargetType="{x:Type RadioButton}">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Application.Resources>
</Application>
